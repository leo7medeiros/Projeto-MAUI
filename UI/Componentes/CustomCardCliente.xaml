<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MauiAppProject.UI.Componentes.CustomCardCliente"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custom="clr-namespace:MauiAppProject.UI.Componentes"
    xmlns:vm="clr-namespace:MauiAppProject.ViewModels"
    BackgroundColor="{StaticResource BACKGROUND_WHITE}"
    NavigationPage.HasNavigationBar="False">

    <ContentView.Content>

        <Frame
            Padding="10"
            x:DataType="vm:CardClienteViewModel"
            BorderColor="{StaticResource AZUL_ESCURO_PRIMARIO}"
            CornerRadius="10"
            HeightRequest="115"
            HorizontalOptions="CenterAndExpand"
            WidthRequest="375">
            <Grid ColumnDefinitions="30*, 60*, 10*">
                <VerticalStackLayout
                    Grid.Column="0"
                    Spacing="5"
                    VerticalOptions="CenterAndExpand">
                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="StartAndExpand"
                        Text="Nome:"
                        TextColor="{StaticResource AZUL_ESCURO_PRIMARIO}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="StartAndExpand"
                        Text="Sobrenome:"
                        TextColor="{StaticResource AZUL_ESCURO_PRIMARIO}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="StartAndExpand"
                        Text="Idade:"
                        TextColor="{StaticResource AZUL_ESCURO_PRIMARIO}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="StartAndExpand"
                        Text="Endereço:"
                        TextColor="{StaticResource AZUL_ESCURO_PRIMARIO}"
                        VerticalOptions="Center" />
                </VerticalStackLayout>

                <VerticalStackLayout
                    Grid.Column="1"
                    Spacing="5"
                    VerticalOptions="CenterAndExpand">
                    <!--  NOME  -->
                    <Label
                        HorizontalOptions="StartAndExpand"
                        LineBreakMode="TailTruncation"
                        MaxLines="1"
                        Text="{Binding Nome, Mode=OneWay}"
                        TextColor="{StaticResource TEXTO_PRETO}"
                        VerticalOptions="Center" />
                    <!--  SOBRENOME  -->
                    <Label
                        HorizontalOptions="StartAndExpand"
                        LineBreakMode="TailTruncation"
                        MaxLines="1"
                        Text="{Binding Sobrenome, Mode=OneWay}"
                        TextColor="{StaticResource TEXTO_PRETO}"
                        VerticalOptions="Center" />
                    <!--  IDADE  -->
                    <Label
                        HorizontalOptions="StartAndExpand"
                        LineBreakMode="TailTruncation"
                        MaxLines="1"
                        Text="{Binding Idade, Mode=OneWay}"
                        TextColor="{StaticResource TEXTO_PRETO}"
                        VerticalOptions="Center" />
                    <!--  ENDEREÇO  -->
                    <Label
                        HorizontalOptions="StartAndExpand"
                        LineBreakMode="TailTruncation"
                        MaxLines="1"
                        Text="{Binding Endereco, Mode=OneWay}"
                        TextColor="{StaticResource TEXTO_PRETO}"
                        VerticalOptions="Center" />
                </VerticalStackLayout>

                <VerticalStackLayout
                    Grid.Column="2"
                    HorizontalOptions="EndAndExpand"
                    Spacing="35"
                    VerticalOptions="CenterAndExpand">

